# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET   /                             leon.web.controllers.Interface.index
GET   /tutorials                    leon.web.controllers.Interface.tutorials
GET   /demos                        leon.web.controllers.Interface.demos

GET   /ajax/getExample/:group/:id   leon.web.controllers.Interface.getExample(group: String, id: Int)
GET   /openConsole                  leon.web.controllers.Interface.openConsole

# Map static resources from the /public folder to the /assets URL path
GET   /assets/*file                 controllers.Assets.at(path="/public", file)
