# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                        leon.web.controllers.Application.index
GET     /tutorials               leon.web.controllers.Application.tutorials
GET     /tutorials/              leon.web.controllers.Application.tutorials

GET     /ajax/getExample/:group/:id     leon.web.controllers.Application.getExample(group: String, id: Int)
GET     /openConsole             leon.web.controllers.Application.openConsole

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file            controllers.Assets.at(path="/public", file)
